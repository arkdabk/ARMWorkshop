{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string",
            "defaultValue": "basictemp1sad131313",
            "metadata": {
                "description": "The name of the Azure Storage account."
            }
        },
        "containerName": {
            "type": "string",
            "defaultValue": "logs",
            "metadata": {
                "description": "The name of the blob container."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location in which the Azure Storage resources should be deployed."
            }
        }
    },
    "variables": {
      "comment": "ARMWorkshop1.00",
      "exName": "BasicTemplate"
    },
    "resources": [
        {
            "name": "storageaccountad131313",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2018-02-01",
            "location":"[parameters('location')]",
            "tags": {
                "account":"name",
                "name":"date"
            },
            "comments": "This is my storage account",
            "kind":"StorageV2",
            "sku":{
                "name":"Standard_LRS"
            }
        },
        {
            "name": "[parameters('storageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2018-02-01",
            "location": "[parameters('location')]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "accessTier": "Hot"
            },
            "resources": [
                {
                    "name": "[concat('default/', parameters('containerName'))]",
                    "type": "blobServices/containers",
                    "apiVersion": "2018-03-01-preview",
                    "dependsOn": [
                        "[parameters('storageAccountName')]"
                    ]
                }
            ]
        }
    ],
    "outputs": {
        "message":{
            "type": "string",
            "value": "[variables('comment')]"
        },
        "ex": {
            "type": "string",
            "value": "[variables('exName')]"
        },
        "blobAccountURI":{
            "type": "string",
            "value":"[reference('storageaccountad131313').primaryEndpoints.blob]"
        }
    }
}